/* =Global -------------------------------------------------------------- */
 body {
     background-color: white;
     color: var(--dark-text);
     font-family: Arial, Helvetica, sans-serif;
     font-weight: 300;
     font-size: 1.1em;
     line-height: 1.8;
     text-align: left;
}
/* Headings */
 h1, h2, h3, h4, h5, h6 {
     line-height: 1;
     font-weight: 300;
}
 a {
     text-decoration: none;
     color: #3cb5f9;
}
 a:hover {
     color: #0793e2;
}


 /* =Header -------------------------------------------------------------- */
    /*Header - Desktop Large*/
 @media (min-width: 810px){
   
     header {
         width: 100%;
         height: 100px;
         overflow: hidden;
         position: relative; //nora
         top: 0;
         left: 0;
         z-index: 999;
         background-color: rgba(255, 0, 0, 0);
         -webkit-transition: height 0.3s;
         -moz-transition: height 0.3s;
         -ms-transition: height 0.3s;
         -o-transition: height 0.3s;
         transition: height 0.3s;
    }
    /*Header Logo - Desktop Large*/
     header h1#logo {
         display: inline-block;
        margin-top: 0;
         float: left;
         font-family:'Space Mono', sans-serif;
         color: white;
         font-weight: 300;
         font-size: 20px;
         -webkit-transition: all 0.3s;
         -moz-transition: all 0.3s;
         -ms-transition: all 0.3s;
         -o-transition: all 0.3s;
         transition: all 0.3s;
         margin-left: 2%;
         vertical-align: text-bottom;
          line-height: 80px;
    }
     header nav {
         display: inline-block;
         float: right;
         margin-right: 20% 
	 position: absolute;
	  border: solid blue; //nora
    }
     header nav a {
        display: inline-block;
         margin-left: 20px;
         margin-right: 20px; //nora
         font-family:'Karla', sans-serif;
         color: white;
         font-weight: 300;
         font-size: 20px;
         -webkit-transition: all 0.3s;
         -moz-transition: all 0.3s;
         -ms-transition: all 0.3s;
         -o-transition: all 0.3s;
         transition: all 0.3s;
         vertical-align: text-bottom;
          line-height: 80px;
	  border: solid red; //nora
    }
     header nav a:hover {
         color: var(--top-color);
    }
     header.smaller {
         height: 55px;
         background-color: var(--bottom-color);
         transition: background-color 0.2s linear;
         margin-right: 2%;
    }
     header.smaller h1#logo {
         width: 290px;
         font-size: 20px;
         margin-left: 2%;
         vertical-align: bottom;
         line-height: 55px;
    }
     header.smaller nav a {
        vertical-align: bottom;
         line-height: 55px;
    }
}


