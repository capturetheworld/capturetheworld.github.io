/*Desktop*/

	@media  screen and (max-width: 50em){  //nora

		.topnav a {display : none;}

		.topnav a.icon {
			float: right;
			display: block;
		}
		.topnav a {display : none;}

	}
	@media  screen and (max-width: 50em){  //nora
		.topnavResponsive {position: relative:}
		.topnavResponsive a.icon {
			position: absolute;
			right: 0;
			top: 0;
		}
		.topnavResponsive a{
			float: none;
			display: block;
			border: solid blue;
			text-align: left;
		}
	}
	




	} // accomodate for window shrink on desktop

@media(min-width: 810px){

    .gird{
        display: grid;
    }

    grid-template-columns: 1fr 1fr 1fr 1fr;

    .content-wrap,#section-b ul{
        grid-column: 2/3;
    }


}



