@import url('https://fonts.googleapis.com/css?family=Oswald') ;
@import url('https://fonts.googleapis.com/css?family=Karla') ; 
:root {
  --top-color: #69F0AE;
  --bottom-color: #132132;
  --dark-text: #333333;
  --light-background:#A6CFE8;
  --light-text: #A6CFE8;
  --dark-background:#132132;
  

}

 html,body {
     margin: 0;
     padding: 0;
     height: 100%;
     width: 100%;
     line-height: 1;
}
 h1, h2, h3, h4, h5, h6 {
     clear: both;
     font-weight: normal;
}
/*Main Image*/
 #intro {
     height: 100% !important;
     width: 100%;
     margin: auto;
     background: url(../media/balloons.jpg) ;
     display: table;
     top: 0;
     background-size: cover;
     clip-path: polygon(
    0 0,
    100% 0,
    100% 100%,
    0 calc(100% - 3vw)
  );
}

 #intro .inner{
     display: table-cell;
     vertical-align: middle;
     width: 100%;
     max-width: none;

}
 
 .content{
     max-width: 500px;
     margin: 0 20%;
}
 .content h1{
     font-family:'Oswald', sans-serif;
     color: #F9F3F4;
     /*text-shadow: 0px 0px 300px;*/
     font-size: 200%;
}
 .content h2{
     font-family:'Oswald', sans-serif;
     color: #F9F3F4;
     margin-top: 0;
     /*text-shadow: 0px 0px 300px;*/
     font-size: 300%;
}

.intro:after {
 
}

#underheader{
     margin-top: -5vw;
     background-color: var(--bottom-color);
     height: 20%;
     z-index: -1;
}

#traits{
    padding-top: 2%;
}



/* =Global -------------------------------------------------------------- */
 body {
     background-color: white;
     color: var(--dark-text);
     font-family: Arial, Helvetica, sans-serif;
     font-weight: 300;
     font-size: 1.1em;
     line-height: 1.8;
     text-align: left;
}
/* Headings */
 h1, h2, h3, h4, h5, h6 {
     line-height: 1;
     font-weight: 300;
}
 a {
     text-decoration: none;
     color: #3cb5f9;
}
 a:hover {
     color: #0793e2;
}


 /* =Header -------------------------------------------------------------- */
    /*Header - Desktop Large*/
 @media (min-width: 810px){
   
     header {
         width: 100%;
         height: 100px;
         overflow: hidden;
         position: fixed;
         top: 0;
         left: 0;
         z-index: 999;
         background-color: rgba(255, 0, 0, 0);

	 /*
         -webkit-transition: height 0.3s;
         -moz-transition: height 0.3s;
         -ms-transition: height 0.3s;
         -o-transition: height 0.3s;
         transition: height 0.3s;
	 */
    }
    /*Header Logo - Desktop Large*/
     header h1#logo{
         display: inline-block;
        margin-top: 1;
         float: left;
         font-family:'Space Mono', sans-serif;
         color: white;
         font-weight: 300;
         font-size: 20px;
         -webkit-transition: all 0.3s;
         -moz-transition: all 0.3s;
         -ms-transition: all 0.3s;
         -o-transition: all 0.3s;
         transition: all 0.3s;
         margin-left: 2%;
          line-height: 80px;
         vertical-align: text-bottom;


	   
    }
    .topnav {
         display: inline;
         float: right;
	 border: solid red;
	 overflow:hidden;
    }
    .topnav a {
	  border: pink solid  4px; //nora

        display: inline-block;
         margin-left: 20px;
	  float: right //nora
         font-family:'Karla', sans-serif;
         color: white;
         font-weight: 300;
         font-size: 20px;
         -webkit-transition: all 0.3s;
         -moz-transition: all 0.3s;
         -ms-transition: all 0.3s;
         -o-transition: all 0.3s;
         transition: all 0.3s;
         vertical-align: text-bottom;
          line-height: 80px;
    }
     .topnav a:hover {
         color: var(--top-color);
    }

    .topnav .icon {
	    display: none;
	    border: solid blue;
    }

     header .smaller {
         height: 55px;
         background-color: var(--bottom-color);
         transition: background-color 0.2s linear;
         margin-right: 2%;

    }
     header .smaller h1#logo {
	    color: red; //nora
         width: 290px;
	 min-width: 50px; //nora
         font-size: 20px;
         margin-left: 2%;
         vertical-align: bottom;
         line-height: 55px;
    }
     header.smaller nav a {
        vertical-align: bottom;
         line-height: 55px;
    }
}


